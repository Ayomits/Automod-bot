{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "outputLogs": "errors-only"
    },
    "format:check": {
      "dependsOn": ["^format:check"],
      "outputLogs": "errors-only"
    },
    "lint:check": {
      "dependsOn": ["^lint:check"],
      "outputLogs": "errors-only"
    },
    "format:fix": {
      "dependsOn": ["^format:fix"],
      "outputLogs": "errors-only"
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "outputLogs": "errors-only"
    },
    "start:backend:dev": {},
    "start:client:dev": {},
    "start:backend:prod": {},
    "start:client:prod": {}
  }
}
