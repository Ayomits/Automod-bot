{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "emitDecoratorMetadata": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@automod/types/*": ["../../packages/types/dist/index.d.ts"],
      "@automod/config/*": ["../../packages/api/dist/index.d.ts"],
      "@automod/api/*": ["../../packages/config/dist/index.d.ts"]
    },
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "node_modules"]
}
