{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@automod/automod",
  "version": "0.0.0",
  "description": "Discord.js bot for automoderation",
  "private": true,
  "license": "MIT",
  "author": "Ayomits",
  "type": "commonjs",
  "main": "index.js",
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "build": "npx turbo build --concurrency=4",
    "docs:dev": "npx turbo dev --concurrency=4",
    "format:fix": "npx turbo format:fix --concurrency=4",
    "lint:fix": "npx turbo lint:fix --concurrency=4",
    "format:check": "npx turbo format:check --concurrency=4",
    "lint:check": "npx turbo lint:check --concurrency=4",
    "changeset": "changeset && pnpm run version-packages",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "test:watch": "vitest",
    "test:ci": "vitest --run",
    "dev": "npx turbo dev --concurrency=4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "3.2.4",
    "tsc-alias": "^1.8.16",
    "turbo": "^2.5.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
